{
    "env": {
        "googleappsscript/googleappsscript":true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "googleappsscript",
        "@typescript-eslint"
    ],
    "rules": {
        "prefer-const": "warn",
        "no-unused-vars": "off",
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/no-unused-vars": "off"
    },
    "globals": {
        "CONFIG":"readonly"
    },
    "ignorePatterns":[
        "sheetCore/node_modules/**",
        "node_modules/eslint/lib/api.js"
    ]
}
